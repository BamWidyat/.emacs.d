;; Customize Emacs UI

;; Disable Menu Bar
(menu-bar-mode -1)

;; Disable native scroll bar
(toggle-scroll-bar -1)

;; Diasble graphical tool bar
(tool-bar-mode -1)

;; Show line numbers
(global-linum-mode)

;; Emacs Theme
(load-theme 'zenburn t)

;; Set Font Size
(set-face-attribute 'default nil :height 100)

